
<h1>ALL POSTS</h1>


<table class="table table-bordered">

    <thead>
        <tr>

            <th>Id</th>
            <th>Title</th>
             <th>Category</th>
            <th>Image</th>
            <th>Status</th>
            <th>Date</th>
            <th>View Post</th>
            <th>Allow Comments</th>

        </tr>
    </thead>

    <tbody>

        {{#each posts}}

        <tr>

            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{categories.name}}</td>
            <td><img src="/uploads/{{file}}" class="img-responsive" style="max-width:150px"></td>
            <td>{{status}}</td>
            <td>{{generateTime date 'MMMM Do YYYY'}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{slug}}" target="_blank">View</a></td>
            <td><a href="/admin/posts/edit/{{id}}"  class="btn btn-info">Edit</a></td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>

        </tr>


        {{/each}}
    </tbody>



</table>