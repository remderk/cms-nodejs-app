<h1>Create post</h1>
{{#each errors}}
    <div class="alert alert-danger">
        {{message}}
    </div>

{{/each}}


<form action="/admin/posts/create" method="post" enctype="multipart/form-data" >



    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" placeholder="Enter title" required >
    </div>

    <div class="form-group">
        <label for="file">Photo</label>
        <input name="file" type="file" class="form-control" id="file" >
    </div>

    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="draft">Draft</option>
            <option value="private">Private</option>
        </select>
    </div>
    <div class="form-group">
        <label for="status">Category</label>
        <div class="form-group">
            <select name="categories" id="categories" class="form-control">
                {{#each categories}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="allowComments">
        <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments">
            Allow Comments
        </label>
    </div>

    <div class="form-group">
        <label for="body">Description</label>
        <textarea required name="body" class="form-control" col="20" rows="10" id="body" placeholder="Enter description"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create post</button>

</form>